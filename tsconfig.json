{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@app/*": ["src/*"],
      "@test/*": [ "__test__/*" ]
    },
    "sourceMap": true,
    "outDir": "dist",
    "lib": ["esnext"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src", "__test__"],
  "exclude": ["node_modules"]
}